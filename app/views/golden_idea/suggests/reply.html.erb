<%= form_for @reply, url: golden_idea_suggests_path, html: { class: "form-horizontal row-fluid", id: "suggest_form" }  do |f| %>
  <div class="form-group" style="text-align:center">
    <%= @suggest.content %>
  </div>
  <div class="form-group row">
    <label for="inputEmail3" class="col-sm-2 col-form-label"><%= t 'table.reply' %></label>
    <div class="col-sm-10">
      <%= f.hidden_field :suggest_id %>
      <%= f.text_area :content, placeholder: tr('table.reply'), class: "form-control" %>
    </div>
  </div>
<% end %>
