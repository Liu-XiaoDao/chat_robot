<div class="form-group row">
  <label for="golden_idea_suggest_title" class="col-sm-2 col-form-label"><%= t 'form.title' %></label>
  <div class="col-sm-10">
    <%= f.text_field  :title, placeholder: t('form.title'), class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <label for="golden_idea_suggest_content" class="col-sm-2 col-form-label"><%= t 'form.detail' %></label>
  <div class="col-sm-10">
    <%= f.text_area :content, rows: 10, class: "form-control" %>
    <!--<div id="editor">
    </div>-->
  </div>
</div>
<% if f.object.new_record? %>
  <div class="form-group row">
    <div class="col-sm-10">
      <%= f.check_box :real_name %>
      <label for="golden_idea_suggest_real_name">I agree to use real-name.</label>
    </div>
  </div>
<% end %>


