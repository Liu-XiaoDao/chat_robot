<div class="wrapper wrapper-library">
  <div class="container">
    <div class="row">
      <%= render 'golden_idea/application/left' %>
      <div class="span9">
        <div class="content">
          <div class="module">
            <div class="module-head">
               <h3>积分分配记录</h3>
            </div>
            <div class="module-body">
              <%= render "golden_idea/application/flash" %>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>金点子</th>
                    <th>提议人</th>
                    <th>获得积分</th>
                    <th>时间</th>
                  </tr>
                </thead>
                <tbody>
                  <% @assign_score_records.each do |assign_score_record| %>
                    <tr>
                      <td><%= assign_score_record.id %></td>
                      <td><%= link_to assign_score_record.idea.title, golden_idea_idea_path(assign_score_record.idea) %></td>
                      <td><%= link_to assign_score_record.employee.name, employee_path(assign_score_record.employee) %></td>
                      <td><%= assign_score_record.score %></td>
                      <td><%= assign_score_record.created_at %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div><!--/.content-->
      </div><!--/.span9-->
    </div>
  </div><!--/.container-->
</div><!--/.wrapper-->
