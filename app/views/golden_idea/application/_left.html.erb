  <div class="sidebar">

    <ul class="widget widget-menu unstyled">
      <li class="active">
        <a href="<%= current_season_index_golden_idea_ideas_path %>">
          <i class="menu-icon icon-book"></i>
          本期金点子
        </a>
      </li>
      <li>
        <a href="<%= golden_idea_seasons_path %>">
          <i class="menu-icon icon-tasks"></i>
          历史各期
        </a>
      </li>
      <li>
        <a href="<%= golden_idea_ideas_path %>">
          <i class="menu-icon icon-list"></i>
          所有金点子
        </a>
      </li>
      <li>
        <a href="<%= golden_idea_goods_path %>">
          <i class="menu-icon icon-shopping-cart"></i>
          积分兑换
        </a>
      </li>
      <li>
        <a href="<%= golden_idea_score_standard_path %>">
          <i class="menu-icon icon-th-large"></i>
          评分标准
        </a>
      </li>
      <li>
        <a href="<%= golden_idea_template_path %>">
          <i class="menu-icon icon-file"></i>
