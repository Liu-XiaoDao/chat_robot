          <% if count > 0 %>
            <b class="label orange pull-right"><%= count %></b>
          <% end %>
        </a>
      </li>
    </ul><!--/.widget-nav-->

    <ul class="widget widget-menu unstyled">
      <% if signed_in? && current_employee.is_golden_idea_admin? %>
        <li>
          <a href="<%= index_admin_golden_idea_goods_path %>">
            <i class="menu-icon icon-cogs"></i>
            积分商品-管理
          </a>
        </li>
        <li>
          <a href="<%= golden_idea_exchange_records_path %>">
            <i class="menu-icon icon-exchange"></i>
            兑换-管理
            <b class="label orange pull-right"><%= GoldenIdea::ExchangeRecord.where(status: '待兑换').count %></b>
          </a>
        </li>
        <li>
          <a href="<%= golden_idea_dashboard_path %>">
            <i class="menu-icon icon-bar-chart"></i>
