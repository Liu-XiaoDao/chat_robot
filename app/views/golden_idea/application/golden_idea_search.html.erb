<% provide :active, "search" %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <h2 class="text-center display-4"><%= t :search %></h2>
    </div>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <form class="navbar-search pull-left input-append dropdown" action="/golden_idea/ideas/search" accept-charset="UTF-8" data-remote="true" method="get" id="search-form" >
            <div class="input-group input-group-lg">
              <input type="search" class="form-control form-control-lg" placeholder="Type your keywords here" id="search_in_keyword" name="term" value="">
              <div class="input-group-append">
                <button type="submit" class="btn btn-lg btn-default" id="search">
                  <i class="fa fa-search"></i>
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-md-10 offset-md-1">
          <div class="list-group" id="list-group">
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
<script type="text/javascript">
  $("#search_in_keyword").on("input", function() {
    $("#search").click();
  });
</script>

<style>
  .list-group-item strong {
    color: #eb592c;
  }
  .navbar #search-result li>a:hover {
    background: #f9f9f9;
    color: #555
  }
</style>

