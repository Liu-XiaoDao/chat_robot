<% provide :active, "current_period" %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>本期金点子-<%= GoldenIdea::Season.last.name %>(<%= @golden_ideas.count %>)</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/golden_idea">Home</a></li>
            <li class="breadcrumb-item active">本期金点子</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">

    <!-- Default box -->
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">
          收集人:
          <% if GoldenIdea::Season.last.collecters.present? %>
            <% GoldenIdea::Season.last.collecters.split(',').each do |u_id| %>
              <% user = Employee.find(u_id) %>
              <%= link_to user.name, user %>
            <% end %>
          <% end %>
          <div class="mt-2 mb-2">
            <% if signed_in? && current_employee.is_golden_idea_admin? %>
              <!--批量上传表单-->
              <%= form_for :import, url: import_preview_golden_idea_ideas_path, method: 'post', html:{ multipart: true, style: "display: none;" } do |f| %>
                <%= f.file_field :file, id: "upload-file-input" %>
                <%= f.submit '', id: "file-submit" %>
              <% end %>
              <%= link_to '导入', "javascript:void(0);", class: "btn btn-sm btn-primary", id: "upload-file-btn", title: "可以先点导出获得导入模板" %>
              <%= link_to '导出', current_season_index_golden_idea_ideas_path(format: :xlsx, params: request.query_parameters), class: "btn btn-sm btn-info" %>
            <% end %>
            <%= link_to '新建', new_golden_idea_idea_path, class: "btn btn-sm btn-warning" %>
          </div>
        </h3>

        <div class="card-tools">
          <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
            <i class="fas fa-minus"></i>
          </button>
          <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
            <i class="fas fa-times"></i>
          </button>
        </div>
      </div>
      <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
              <tr>
                <th style="width: 5%">分类</th>
                <th style="width: 15%">标题</th>
                <th style="width: 5%">主讲人</th>
                <th style="width: 10%">提议人</th>
                <th style="width: 5%">部门</th>
                <th style="width: 10%" class="text-center">状态</th>
                <th style="width: 35%">内容描述</th>
                <th style="width: 5%">得分</th>
                <th style="width: 10%"></th>
              </tr>
            </thead>
            <tbody>
              <% @golden_ideas.each do |golden_idea| %>
                <tr class="<%= is_transfer?(golden_idea) %>">
                    <td><%= golden_idea.category %></td>
                    <td><%= link_to golden_idea.title, golden_idea_idea_path(golden_idea) %></td>
                    <td><%= golden_idea.reporter.try :name %></td>
                    <td class="project_progress">
                      <% if golden_idea.proposers.present? %>
                        <% golden_idea.proposers.split(',').each do |u_id| %>
                          <% user = Employee.find(u_id) %>
                          <%= link_to user.name, user %>
                        <% end %>
                      <% end %>
                    </td>
                    <td><%= golden_idea.department %></td>
                    <td class="project-state">
                      <span class="badge badge-success"><%= golden_idea.status %></span>
                    </td>
                    <td title="<%= golden_idea.description %>" data-mtpis="<%= golden_idea.description %>"><%= truncate(golden_idea.description, length: 20) %></td>
                    <td><%= golden_idea.score %></td>
                    <td class="project-actions text-right">
                      <% if current_employee.is_golden_idea_admin? %>
                        <%= link_to '编辑', edit_golden_idea_idea_path(golden_idea), class: "btn btn-info btn-sm" %>
                        <%= link_to '删除', golden_idea_idea_path(golden_idea), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger btn-sm" %>
                      <% elsif golden_idea.is_edit?(current_employee.id) %>
                        <%= link_to '编辑', edit_golden_idea_idea_path(golden_idea), class: "btn btn-primary btn-sm" %></td>
                      <% end %>
                    </td>
                </tr>
              <% end %>
            </tbody>
        </table>
      </div>
      <!-- /.card-body -->
    </div>
    <!-- /.card -->

  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->
