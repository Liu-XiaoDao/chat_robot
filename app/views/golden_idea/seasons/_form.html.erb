<div class="form-group row">
  <label for="inputEmail3" class="col-sm-2 col-form-label">标题</label>
  <div class="col-sm-10">
    <%= f.text_field  :name, placeholder: "Type something here...", class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <label for="inputPassword3" class="col-sm-2 col-form-label">开始时间</label>
  <div class="col-sm-10">
    <%= f.date_field  :start_date, placeholder: "Type something here...", class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <label for="inputPassword3" class="col-sm-2 col-form-label">结束时间</label>
  <div class="col-sm-10">
    <%= f.date_field  :end_date, placeholder: "Type something here...", class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <label for="inputPassword3" class="col-sm-2 col-form-label">收集人</label>
  <div class="col-sm-10">
    <% selected = f.object.collecters.split(',') if f.object.collecters.present?  %>
    <%= f.select  :collecters, options_for_select(Employee.all.collect { |e| [ e.name, e.id ] }, :selected => selected), {:placeholder => "Please select"}, {:multiple => true, :class => 'form-control select2'} %>
  </div>
</div>
<div class="form-group row">
  <label for="inputPassword3" class="col-sm-2 col-form-label">描述</label>
  <div class="col-sm-10">
    <%= f.text_field  :description, placeholder: "Type something here...", class: "form-control" %>
  </div>
</div>
<script>
  $(document).ready(function() {
    $('.select2').select2();
    $('.select2bs4').select2({
      theme: 'bootstrap4'
    })
  });
</script>
