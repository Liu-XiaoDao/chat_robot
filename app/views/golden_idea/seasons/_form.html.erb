<div class="form-group row">
  <label for="inputEmail3" class="col-sm-2 col-form-label"><%= t 'form.title' %></label>
  <div class="col-sm-10">
    <%= f.text_field  :name, placeholder: "Type something here...", class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <label for="inputPassword3" class="col-sm-2 col-form-label"><%= t 'form.begin_time' %></label>
  <div class="col-sm-10">
    <%= f.date_field  :start_date, placeholder: "Type something here...", class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <label for="inputPassword3" class="col-sm-2 col-form-label"><%= t 'form.end_date' %></label>
  <div class="col-sm-10">
    <%= f.date_field  :end_date, placeholder: "Type something here...", class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <label for="inputPassword3" class="col-sm-2 col-form-label"><%= t 'form.collector' %></label>
  <div class="col-sm-10">
    <% selected = f.object.collecters.split(',') if f.object.collecters.present?  %>
    <%= f.select  :collecters, options_for_select(Employee.where(site: current_employee.site).collect { |e| [ e.name, e.id ] }, :selected => selected), {:placeholder => "Please select"}, {:multiple => true, :class => 'form-control select2'} %>
  </div>
</div>
<div class="form-group row">
  <label for="inputPassword3" class="col-sm-2 col-form-label"><%= t 'form.description' %></label>
  <div class="col-sm-10">
    <%= f.text_field  :description, placeholder: "Type something here...", class: "form-control" %>
  </div>
</div>
<script>
  $(document).ready(function() {
    $('.select2').select2();
    $('.select2bs4').select2({
      theme: 'bootstrap4'
    })
  });
</script>
<style type="text/css" media="screen">
  .select2-selection__choice {
    background-color: #007bff !important;
    border: 1px solid #006fe6 !important;
  }
</style>
