<div class="wrapper wrapper-library">
  <div class="container">
    <div class="row">
      <%= render 'golden_idea/application/left' %>
      <div class="span9">
        <div class="content">
          <div class="module">
            <div class="module-head">
              <h3>金点子-<%=@season.name%></h3>
            </div>
            <div class="module-option clearfix">
              <div class="pull-right">
                <%#= link_to 'Create', new_book_path, class: "btn btn-primary","data-toggle"=>"modal", "data-target"=>"#myModal" %>
              </div>
            </div>
            <div class="module-body">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>分类</th>
                    <th>标题</th>
                    <th>提议人</th>
                    <th>部门</th>
                    <th>内容描述</th>
                    <th>得分</th>
                    <th class="cell-btn align-right">操作</th>
                    <th class="cell-btn align-right"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @ideas.each do |idea| %>
                    <tr>
                      <td><%= idea.id %></td>
                      <td><%= idea.category %></td>
                      <td><%= link_to idea.title, show_admin_golden_idea_idea_path(idea) %></td>
                      <td>
                        <% if idea.proposers.present? %>
                          <% idea.proposers.split(',').each do |u_id| %>
                            <% user = Employee.find(u_id) %>
                            <%= link_to user.name, user %>
                          <% end %>
                        <% end %>
                      </td>
                      <td><%= idea.department %></td>
                      <td><%= idea.description %></td>
                      <td><%= idea.score %></td>
                      <td class="cell-btn align-right"><%= link_to 'Edit', edit_golden_idea_idea_path(idea), class: "btn btn-mini btn-primary","data-toggle"=>"modal", "data-target"=>"#myModal" %></td>
                      <td class="cell-btn align-right"><%= link_to 'Content', edit_content_golden_idea_idea_path(idea), class: "btn btn-mini btn-primary" %></td>
                      <td class="cell-btn align-right"><%= link_to 'Del', golden_idea_idea_path(idea), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-mini btn-primary" %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              <%#= will_paginate @golden_ideas, renderer: WillPaginate::ActionView::BlogLinkRenderer %>
            </div>
          </div>
        </div>
      </div>
      <div id="info" class="span9">

      </div>
    </div>
  </div><!--/.container-->
</div><!--/.wrapper-->

<div class="modal fade production-task-model-config" id="myModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal">x</button>
       <h3>Edit Book</h3>
    </div>
    <div class="modal-content">
      <div class="modal-body">
        <div style="width:10px;height:10px;"></div>
      </div>
    </div>
    <div class="modal-footer">
       <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
       <button type="submit" class="btn btn-primary" onclick="document.getElementById('create_book_form').submit();">Submit</button>
    </div>
   </div>
</div>


<script type="text/javascript">
  $("#myModal").on("hidden", function() {
    $(this).removeData("modal");
  });

  $('#closebtn').on('click', function(){
    $(".modal-body input[value='Save']").click();
    setTimeout("location.reload()",500);
  });
</script>
<style media="screen">
  .wrapper {
    min-height: 0;
  }
  .modal-backdrop, .modal-backdrop.fade.in {
    background: #000000;
    opacity: .8
  }
</style>
<div class="">
  <%=Employee.current_employee.inspect%>
  <%= session[:employee_name] %>
</div>
