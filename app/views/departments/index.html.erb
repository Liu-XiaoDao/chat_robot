<div class="wrapper">
  <div class="container">
    <div class="row">
      <%= render 'shared/left' %>

        <div class="span9">
           <div class="content">
              <div class="module message">
                <div class="module-head">
                  <h3>部门</h3>
                </div>
                <div class="module-option clearfix">
                  <div class="pull-left">
                    <div class="btn-group">
                      <button class="btn">Inbox</button>
                      <button class="btn dropdown-toggle" data-toggle="dropdown">
                        <span class="caret"></span>
                      </button>
                      <ul class="dropdown-menu">
                        <li><a href="#">Inbox(11)</a></li>
                        <li class="divider"></li>
                        <li><a href="#">Settings</a></li>
                      </ul>
                    </div>
                  </div>
                  <div class="pull-right"><a href="/departments/update_department" class="btn btn-primary">同步部门</a></div>
                </div>
                <div class="module-body table">
                  <table class="table table-message">
                    <tbody>
                      <tr class="heading">
                        <td class="cell-check">ID</td>
                        <td class="cell-author hidden-phone hidden-tablet">领导</td>
                        <td class="cell-title"> 部门</td>
                        <td class="cell-time align-right">更新时间</td>
                      </tr>
                      <% @departments.each do |department| %>
                        <tr class="unread">
                          <td class="cell-title"><%= department.id %></td>
                          <td class="cell-author hidden-phone hidden-tablet"><%= department.manager_name %></td>
                          <td class="cell-title"><%= department.name %></td>
                          <td class="cell-time align-right"><%= department.updated_at.try(:strftime, "%Y-%m-%d") %></td>
                        </tr>
                       <% end %>
                      <!-- <tr class="unread starred">
                        <td class="cell-icon"><i class="icon-star"></i></td>
                        <td class="cell-author hidden-phone hidden-tablet">John Donga</td>
                        <td class="cell-title">Test Title</td>
                        <td class="cell-icon hidden-phone hidden-tablet"><i class="icon-paper-clip-no"></i></td>
                        <td class="cell-time align-right">18:01</td>
                      </tr> -->
                    </tbody>
                  </table>
                </div>
                <div class="module-foot" style="padding:0;"><!-- 本来是个table的footer，现在当做横线用 --></div>
                <%= will_paginate @departments, renderer: WillPaginate::ActionView::BlogLinkRenderer %>
              </div>
            </div><!--/.content-->
          </div><!--/.span9-->
      </div>
  </div><!--/.container-->
</div><!--/.wrapper-->
