<div class="wrapper wrapper-library">
  <div class="container">
    <div class="row">
      <%= render 'library/left' %>
      <div class="span9">
        <div class="content">
          <div class="btn-controls">
            <div class="btn-box-row row-fluid">
              <div class="span12">
                <div class="row-fluid">
                  <div class="span12">
                    <a href="#" class="btn-box small span4"><i class="icon-book"></i><b>图书: <%= Book.all.count %></b></a>
                    <a href="#" class="btn-box small span4"><i class="icon-tasks"></i><b>分类: <%= BookClassification.all.count %></b></a>
                    <a href="#" class="btn-box small span4"><i class="icon-group"></i><b>员工：<%= Employee.all.count %></b></a>
                  </div>
                </div>
              </div>

            </div>
          </div>

          <div class="module">
            <div class="module-head">
              <h3>TOP 5</h3>
            </div>
            <div class="module-body">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th style="width:2%">#</th>
                    <th style="width:8%">书名</th>
                    <th style="width:15%">作者</th>
                    <th style="width:10%">分类</th>
                    <th style="width:15%">点赞次数</th>
                    <th style="width:15%">借阅次数</th>
                    <th style="width:10%">状态</th>
                  </tr>
                </thead>
                <tbody>
                  <% Book.top_5.first(5).each do |book| %>
                    <tr>
                      <td><%= book.id %></td>
                      <td><%= link_to book.name, book_path(book) %></td>
                      <td><%= book.author %></td>
                      <td><%= book.classification_name %></td>
                      <td><%= book.praise_count %></td>
                      <td><%= book.borrow_records.count %></td>
                      <td><%= book.status %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>


    </div>
  </div><!--/.container-->
</div><!--/.wrapper-->

<script type="text/javascript">
  $(document).ready(function(){
    $('.table-message tbody tr').click(function(){
        window.location.href = $(this).attr('date-href');
      });
  });
</script>
<style media="screen">
  .wrapper {
    min-height: 0;
  }
</style>
