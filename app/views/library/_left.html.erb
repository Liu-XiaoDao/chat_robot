<div class="span3">
  <div class="sidebar">

    <ul class="widget widget-menu unstyled">
      <li class="active">
        <a href="<%= questions_path %>">
          <i class="menu-icon icon-dashboard"></i>
          所有图书
        </a>
      </li>
      <li>
        <a href="<%= new_question_path %>">
          <i class="menu-icon icon-bullhorn"></i>
          新建帮助
        </a>
      </li>
      <li>
        <a href="<%= advanced_search_questions_path %>">
          <i class="menu-icon icon-inbox"></i>
          高级搜索
        </a>
      </li>

      <li>
        <a href="<%= book_classifications_path %>">
          <i class="menu-icon icon-tasks"></i>
          问题分类
          <b class="label orange pull-right">19</b>
        </a>
      </li>
    </ul><!--/.widget-nav-->
    <ul class="widget widget-menu unstyled">
      <% Category.all.each do |category| %>
        <li>
          <a class="collapsed" data-toggle="collapse" href="#togglePages_<%= category.id %>">
            <i class="menu-icon icon-cog"></i>
            <i class="icon-chevron-down pull-right"></i>
            <i class="icon-chevron-up pull-right"></i>
            <%= category.category_name %>
          </a>
          <ul id="togglePages_<%= category.id %>" class="collapse unstyled">
            <% category.questions.limit(5).each do |question| %>
              <li><a href="<%= question_path(question) %>"><i class="icon-paste"></i><%= question.title %></a></li>
            <% end %>
          </ul>
        </li>
      <% end %>


      <li><a href="/departments"><i class="menu-icon icon-group"></i>部门列表</a></li>
      <li><a href="/employees"><i class="menu-icon icon-user"></i>员工列表</a></li>
      <li><a href="/employees/phone_number"><i class="menu-icon icon-user"></i>通讯录</a></li>
      <li><a href="/employees/show_phone_number"><i class="menu-icon icon-user"></i>号码设置</a></li>

    </ul>

  </div><!--/.sidebar-->
</div><!--/.span3-->
