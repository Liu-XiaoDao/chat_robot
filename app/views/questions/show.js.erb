<% if @articles.any? %>
   $("#search-form").removeClass("open");	
   $("#search-result").children("li").remove();

   $("#search-form").addClass("open");
   $("#search-result").append("<%= j render('result_list', articles: @articles) %>");
<% else %>
   $("#search-form").removeClass("open");	
   $("#search-result").children("li").remove();
<% end %>
